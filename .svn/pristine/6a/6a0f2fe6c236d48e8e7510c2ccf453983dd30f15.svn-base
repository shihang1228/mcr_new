	})
	
})

function checkKind(){
	var value = $("#kindid").val();
		switch(value){
			case '0' :
				$(".beym").addClass("hide");
				$(".beother").addClass("hide");
				break;
			case '1' :
				$(".beym").removeClass("hide");
				$(".beother").addClass("hide");
				break;
			default :
				$(".beym").addClass("hide");
				$(".beother").removeClass("hide");
				break;
		}
}

// 表单验证
function releaseForm (item,min,max) {
	item.blur(function (){
		if (!(item.val() == "")) {
			if (item.val() > max || item.val() < min) {
				alert("请输入"+min+"-"+max+"之间的数字！");
				item.focus();
				return false;
			};
		};
	})
}
releaseForm($('#diameterlen'),10,80);
releaseForm($('#thinckness'),10,500);
releaseForm($('#wide'),10,500);
$('#sendmessage').click(function (){
	var re_refcapacity = /^(?:[1-9]{1}[0-9]{0,3}|10000)$/;//总货量
	var re_diameterlen = /^(?:[1-7]\d|80)$/;//径级
	var re_diameterlenMax = /^(?:[1-7]\d|80)$/;//径级
	var re_thinckness = /^(?:[1-9]\d|[1-4][0-9]{2}|500)$/;//厚度
	var re_wide = /^(?:[1-9]\d|[1-4][0-9]{2}|500)$/;//宽度
	var re_phone = /^[1][34578][0-9]{9}$/;
	if ($('#stuffid').val() == '0') {
		alert('请选择树种！');
		$('#stuffid').focus();
		return false;
	} else if ($('#kindid').val() == '0') {
		alert('请选择货种！');
		$('#kindid').focus();
		return false;
	} else if ($('#productlen').val() == '0') {
		alert('请选择长度！');
		$('#productlen').focus();
		return false;
	} else if (!$('#refcapacity').val()) {
		alert('请输入总货量！');
		$('#refcapacity').focus();
		return false;
	} else if(!re_refcapacity.test($('#refcapacity').val())){
		alert('总货量不能超过10000');
		$('#refcapacity').focus();
		return false;
	}else if($('#price').val().length == 0){}
	else if($('#price').val().length != 0) {
		if (!re_refcapacity.test($('#price').val())) {
			alert('价格不能超过10000！');
			$('#price').focus();
			return false;
		}
	}else if($("#contactphone").val().length == 0){alert($("#contactphone").val().length);}
	else if($('#contactphone').val().length != 0) {
		alert($("#contactphone").val().length);
		if(!re_contactphone.test($("#contactphone").val())) {
			alert('请输入正确的手机号！');
				$('#contactphone').focus();
				return false;
		}
	}

	if ($('#diameterlen').val()) {
		if (!re_diameterlen.test($('#diameterlen').val())) {
			alert('径级输入有误！');
			$('#diameterlen').focus();
			return false;
		}
	} else if ($('#diameterlenMax').val()) {
		if (!re_diameterlen.test($('#diameterlenMax').val())) {
			alert('径级输入有误！');
			$('#diameterlenMax').focus();
			return false;
		}
	} else if ($('#thinckness').val()) {
		if (!re_thinckness.test($('#thinckness').val())) {
			alert('厚度输入有误！');
			$('#thinckness').focus();
			return false;
		}
	} else if ($('#wide').val()) {
		if (!re_wide.test($('#wide').val())) {
			alert('宽度输入有误！');
			$('#wide').focus();
			return false;
		}
	} else if ($('#diameterlenMax').val() < $('#diameterlen').val()) {
		alert('径级输入有误！');
		return false;
	};
})
//ios fixed修复
$('input').focus(function (){
	$('.header').css('position','relative');
	$('.btnFixed').css('position','relative');
	$('body').css({'padding-top':'0'});
})
$('input').blur(function(){
	$('.header').css('position','fixed');
	$('.btnFixed').css('position','fixed');
	$('body').css({'padding-top':'35px'});
})
</script>
