	  private function getcontactname($contact_phone){
		  $result="";
		  $sql="select username from t_user where phone='".$contact_phone."' or phone1='".$contact_phone."' or phone2='".$contact_phone."' limit 1";
		  $result = $this->dbconn->query($sql);
		 
		  if(($result) and($result->num_rows >0))
		  {
			  $row=$result->fetch_object(); 
			  $result=$row->username;  
		  }
		  else{
			$result='0';  
		  }
		 
		  return $result;
	  }
	  
