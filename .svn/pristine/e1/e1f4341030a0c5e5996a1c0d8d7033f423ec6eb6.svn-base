<script type="text/javascript" src="http://apps.bdimg.com/libs/jquery/1.9.1/jquery.js"></script>
<script type="text/javascript">
	$(function(){
		$("#search").keyup(function(){	
			var values = $(this).val();
			var $this = $(this);
			$(".showValue").empty().show();
			$.ajax({
				type:"POST",
				url:"data.html",
				success:function(data){
					var arr = eval(data);
					for(var i = 0;i < arr.length;i++){
						$(".showValue").append("<li>"+arr[i].contactphone+"</li>");
					}
					
					/*关键词搜索*/
					$(".showValue").prepend($(".showValue").find("li:contains('"+values+"')").each(function(){
						$(this).html($(this).text());
					}).css("color","red"));

					/*当鼠标点击文字的时候给文本框赋值*/
					$(".showValue").find("li").click(function(event){
						$this.val($(this).text());
						$(".showValue").hide();

					});
					/*如果输入的字符正好为11位，则隐藏下拉框*/
					if(values.length == 11){
						$(".showValue").hide();
					}
					/*如果下拉框不匹配输入的字符时，则隐藏下拉框*/
					if($(".showValue").find("li:contains('"+values+"')").length == 0){
						$(".showValue").hide();
					}
					/*点击空白处隐藏下拉框*/
					$(document).click(function(event){
						$(".showValue").hide();
						
					});

				}
			});
		});
	});
	
</script>
